{
  "name": "@pomogator/bot",
  "version": "1.0.0",
  "description": "Telegram bot for Pomogator Mini App",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:simple": "tsx watch src/index.simple.ts",
    "dev:test": "tsx watch src/index.test.ts",
    "build": "tsc",
    "build:simple": "tsc src/index.simple.ts --outDir dist",
    "build:test": "tsc src/index.test.ts --outDir dist",
    "start": "node dist/index.js",
    "start:simple": "node dist/index.simple.js",
    "start:test": "node dist/index.test.js"
  },
  "dependencies": {
    "telegraf": "^4.15.6",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2"
  }
}
